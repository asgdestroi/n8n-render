# .env.example - template para n8n

# Segurança / acesso
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=troque-por-uma-senha-segura

# Chave para criptografar credenciais (usar >=32 bytes hex). Gere com: openssl rand -hex 32
N8N_ENCRYPTION_KEY=troque-por-uma-chave-gerada

# Host / porta (n8n usa 5678 internamente)
N8N_PORT=5678
# N8N_HOST pode ficar em branco; no Render usamos WEBHOOK_URL / N8N_EDITOR_BASE_URL
#N8N_HOST=seu-host.onrender.com

# URL que n8n usará para webhooks e callbacks OAuth
WEBHOOK_URL=https://seu-n8n-onrender.com/
N8N_EDITOR_BASE_URL=https://seu-n8n-onrender.com/

# Timezone do servidor (útil para datas)
GENERIC_TIMEZONE=America/Sao_Paulo

# Banco de dados (usando Postgres)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres-host
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=postgres
DB_POSTGRESDB_PASSWORD=troque-por-a-senha-do-db

# Outras (opcionais)
N8N_LOG_LEVEL=info
# N8N_TEMPLATES_ENABLED=false
